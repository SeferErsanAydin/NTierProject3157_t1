@model CategoryVM
@{
    ViewBag.Title = "CategoryList";
}

<section class="panel">
    <header class="panel-heading">
        @Html.ActionLink("Kategori Ekle", "AddCategory", "Category", null, new { @class = "btn btn-primary" })
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Kategori ID</th>
                        <th>Kategori ismi</th>
                        <th>Kategori Acıklaması</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Category item in Model.Categories)
                    {
                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>@item.CategoryName</td>
                            <td class="hidden-phone">@item.Description</td>
                            <td class="center hidden-phone">@item.Status</td>
                            <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteCategory", "Category", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                            <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateCategory", "Category", new { id = item.ID }, new { @class = "btn btn-warning" })    </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</section>
<script src="~/Areas/Admin/AdminScripts/AdminCategoryDTJ.js"></script>

